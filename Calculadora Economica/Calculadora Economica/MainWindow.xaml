                                    <DataGridTextColumn Header="Inversión" Binding="{Binding Inversion}" Width="*"/>
                                    <DataGridTextColumn Header="Ingresos" Binding="{Binding Ingresos}" Width="*"/>
                                    <DataGridTextColumn Header="Flujo Neto" Binding="{Binding Flujo}" Width="*"/>
